<!--pages/myOldThings/myOldThings.wxml-->
<view class="container">
  <!-- 好物列表 -->
  <view class="picture">
    <block wx:for="{{listData}}" wx:key="_id">
      <view class="item" bindtap="toIdleInfo" id="{{item._id}}">
        <image lazy-load mode="widthFix" src="{{item.pathUrl[0].path}}" />
        <view class="remark">{{item.name}}-{{item.remark}}</view>
        <view class="tags">
          <block wx:for="{{item.specification}}" wx:for-item="sitem" wx:for-index="sindex" wx:key="_id">
            <view class="tag">{{sitem.value}}</view>
          </block>
        </view>
        <view class="footer">
          <view class="price"><text>¥</text>{{item.price}}</view>
          <van-icon custom-class="ellipsis" catchtap="noDelete" id="{{item._id}}" name="delete-o" />
        </view>
      </view>
    </block>
  </view>

  <!-- 空状态 -->
  <Empty wx:if="{{!listData.length}}" />
</view>
