<!--pages/release/release.wxml-->
<view class="container">
  <view class="content">
    <!-- 名称 -->
    <BlockBox title="名称">
      <van-field
        model:value="{{ name }}"
        placeholder="请输入名称"
        border="{{ false }}"
      />
    </BlockBox>
    <!-- 价格 -->
    <BlockBox title="价格">
      <van-field
        model:value="{{ price }}"
        placeholder="请输入价格"
        border="{{ false }}"
      />
    </BlockBox>
    <!-- 取货方式 -->
    <BlockBox padding="22rpx 20rpx">
      <view class="takeType">
        <view class="title">取货方式</view>
        <van-radio-group value="{{ radio }}" bind:change="onRadioChange" direction="horizontal">
          <van-radio name="0">自提</van-radio>
          <van-radio name="1">送货上门</van-radio>
        </van-radio-group>
      </view>
    </BlockBox>
    <!-- 手机号 -->
    <BlockBox>
      <view class="box">
        <view class="title">手机号</view>
        <van-field
          model:value="{{ phone }}"
          placeholder="请输入手机号"
          border="{{ false }}"
          type="number"
        />
        <view class="btn">
          <button
            class="phoneNumber"
            open-type="getPhoneNumber"
            bindgetphonenumber="getPhoneNumber"
          >
            获取
          </button>
        </view>
      </view>
    </BlockBox>
    <!-- 规格 -->
    <BlockBox title="规格">
      <van-cell-group wx:for="{{specifications}}" wx:key="title">
        <view class="fieldBox">
          <!-- key -->
          <van-field
            model:value="{{ item.key }}"
            placeholder="请输入规格"
            border="{{ false }}"
            input-class="optionTitle"
            bind:change="onChangeSpec"
            data-index="{{index}}"
            data-type="key"
          >
          </van-field>:
          <!-- value -->
          <van-field
            model:value="{{ item.value }}"
            placeholder="请输入值"
            border="{{ false }}"
            input-class="optionInput"
            bind:change="onChangeSpec"
            data-index="{{index}}"
            data-type="value"
          />
          <!-- 删除规格的图标 -->
          <van-icon custom-class="customIcon" id="{{index}}" bindtap="delSpec" slot="right-icon" name="clear" />
        </view>
      </van-cell-group>
      <!-- 添加规格 -->
      <van-button type="default" custom-class="addBtn" bindtap="addSpec" block>添加规格</van-button>
    </BlockBox>
    <!-- 备注 -->
    <BlockBox title="备注">
      <van-field
        model:value="{{ remark }}"
        placeholder="备注信息"
        border="{{ false }}"
        type="textarea"
        autosize
      />
    </BlockBox>
  </view>

  <!-- 底部按钮 -->
  <BottomBtn text="发布" bind:onClick="onRelease" />
</view>
