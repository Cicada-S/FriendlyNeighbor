/* pages/idleInfo/idleInfo.wxss */
.container {
  width: 100vw;
}
.container .idleInfo {
  padding: 20rpx 30rpx;
}
.container .idleInfo .infoTop {
  display: flex;
  align-items: center;
}
.container .idleInfo .infoTop .left .price {
  font-size: 36rpx;
  color: var(--Color-ViceA);
}
.container .idleInfo .infoTop .left .price .icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}
.container .idleInfo .infoTop .left .price .type {
  color: var(--Color-MainA);
  font-size: 20rpx;
  border-radius: 10rpx;
  padding: 2rpx 8rpx;
  margin-left: 10rpx;
  background-color: rgba(64, 127, 245, 0.2);
}
.container .idleInfo .infoTop .left .name {
  font-size: 32rpx;
  font-weight: 550;
  color: var(--Color-MainB);
}
.container .idleInfo .infoTop .operation {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  color: var(--Color-White);
  font-size: 32rpx;
}
.container .idleInfo .infoTop .operation .button {
  width: 80rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  padding: 0 20rpx;
  border-radius: 20rpx;
  background-color: var(--Color-MainA);
}
.container .idleInfo .infoTop .operation .copy {
  position: relative;
}
.container .idleInfo .infoTop .operation .copy::after,
.container .idleInfo .infoTop .operation .copy::before {
  content: '';
  position: absolute;
  width: 22rpx;
  height: 22rpx;
  border-radius: 5rpx;
  background-color: var(--Color-White);
}
.container .idleInfo .infoTop .operation .copy::after {
  top: 30%;
  left: 30%;
  border-top: 2rpx solid var(--Color-MainA);
  border-right: 2rpx solid var(--Color-MainA);
}
.container .idleInfo .infoTop .operation .copy::before {
  top: 20%;
  left: 40%;
}
.container .idleInfo .infoTop .operation .dial {
  margin-left: 30rpx;
}
.container .idleInfo .remark {
  padding: 20rpx 0;
}
.container .idleInfo .specification {
  display: flex;
  padding: 10rpx 0;
}
.container .idleInfo .specification .specItem + .specItem {
  border-left: 1rpx solid var(--Color-FontB);
}
.container .idleInfo .specification .specItem:first-child {
  padding-left: 0;
}
.container .idleInfo .specification .specItem:nth-last-child(1) {
  padding-right: 0;
}
.container .idleInfo .specification .specItem {
  font-size: 24rpx;
  padding: 0 30rpx;
}
.container .idleInfo .specification .specItem .name {
  color: var(--Color-FontB);
  padding-bottom: 8rpx;
}
.container .detailsImage {
  width: 100%;
  padding-top: 30rpx;
}
.container .detailsImage image {
  width: 100%;
}
.container .commentArea {
  margin: 40rpx 30rpx;
  font-size: 28rpx;
}
.container .commentArea .title {
  color: var(--Color-FontA);
  letter-spacing: 2rpx;
}
.container .commentArea .commentList {
  margin: 30rpx 0;
}
.container .commentArea .commentList .commentItem {
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid var(--Color-FontE);
}
.container .commentArea .commentList .commentItem .fatherComment,
.container .commentArea .commentList .commentItem .sonCommentItem {
  display: flex;
}
.container .commentArea .commentList .commentItem .fatherComment .userPic,
.container .commentArea .commentList .commentItem .sonCommentItem .userPic {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.container .commentArea .commentList .commentItem .fatherComment .sonUserPic,
.container .commentArea .commentList .commentItem .sonCommentItem .sonUserPic {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.container .commentArea .commentList .commentItem .fatherComment .content,
.container .commentArea .commentList .commentItem .sonCommentItem .content {
  flex: 1;
  margin: 0 20rpx;
}
.container .commentArea .commentList .commentItem .fatherComment .content .userName,
.container .commentArea .commentList .commentItem .sonCommentItem .content .userName {
  color: var(--Color-FontA);
  margin-bottom: 10rpx;
}
.container .commentArea .commentList .commentItem .fatherComment .content .userName .author,
.container .commentArea .commentList .commentItem .sonCommentItem .content .userName .author {
  color: var(--Color-FontD);
  font-size: 22rpx;
  background-color: var(--Color-FontE);
  border-radius: 20rpx;
  padding: 5rpx 10rpx;
  margin-left: 10rpx;
}
.container .commentArea .commentList .commentItem .fatherComment .content .commentContent,
.container .commentArea .commentList .commentItem .sonCommentItem .content .commentContent {
  margin-bottom: 20rpx;
}
.container .commentArea .commentList .commentItem .fatherComment .content .commentContent .comment,
.container .commentArea .commentList .commentItem .sonCommentItem .content .commentContent .comment {
  margin-right: 10rpx;
}
.container .commentArea .commentList .commentItem .fatherComment .content .commentContent .comment .reply,
.container .commentArea .commentList .commentItem .sonCommentItem .content .commentContent .comment .reply {
  margin-right: 8rpx;
}
.container .commentArea .commentList .commentItem .fatherComment .content .commentContent .comment .coverReply,
.container .commentArea .commentList .commentItem .sonCommentItem .content .commentContent .comment .coverReply {
  margin-left: 8rpx;
  color: var(--Color-FontA);
}
.container .commentArea .commentList .commentItem .fatherComment .content .commentContent .commentTime,
.container .commentArea .commentList .commentItem .sonCommentItem .content .commentContent .commentTime {
  color: var(--Color-FontA);
  font-size: 24rpx;
  white-space: nowrap;
}
.container .publishComment {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 30rpx 0;
  background-color: var(--Color-White);
}
.container .publishComment .input {
  flex: 1;
  height: 80rpx;
  padding: 0 30rpx;
  line-height: 80rpx;
  margin-bottom: 10rpx;
  color: var(--Color-FontD);
  border-radius: 30rpx;
  background: var(--Color-FontE);
}
.container .publishComment .hair {
  width: 120rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: var(--Color-White);
  margin-bottom: 10rpx;
  margin-left: 20rpx;
  border-radius: 20rpx;
  background-color: var(--Color-MainA);
}
.container .publishComment .hair::after {
  border: none;
}
