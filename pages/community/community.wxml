<!--pages/community/community.wxml-->
<view class="container">
  <!-- 搜索框 -->
  <van-search
    custom-class="search"
    model:value="{{ search }}"
    shape="round"
    placeholder="Search..."
    bind:search="onSearch"
  />

  <view class="communityList">
    <BlockBox wx:for="{{communityList}}" wx:key="_id">
      <view class="communityItem">
        <image class="image" src="{{item.qrCodePath}}" />
        <view class="content">
          <view class="name">{{item.name}}</view>
          <view class="city">{{item.province}}-{{item.city}}-{{item.county}}</view>
        </view>
      </view>
    </BlockBox>
  </view>

  <!-- 底部按钮 -->
  <view class="overlau" style="padding-bottom:{{bottomLift}}px">
    <view class="bottomBtn" bindtap="toAddCommunity">
      <text>添加小区</text>
    </view>
  </view>
</view>
