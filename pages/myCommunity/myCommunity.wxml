<!--pages/myCommunity/myCommunity.wxml-->
<view class="container">
  <BlockBox padding="20rpx">
    <view class="communityInfo" wx:if="{{communityInfo._id}}">
      <image class="qrCode" src="{{communityInfo.qrCodePath}}" />
      <view class="name">{{communityInfo.name}}</view>
      <view class="city">{{communityInfo.province}}-{{communityInfo.city}}-{{communityInfo.county}}</view>
    </view>
    <button wx:if="{{!application._id}}" class="change" bindtap="changeCommunity">更换小区</button>
    <view wx:else class="apply">
      <view class="communityName">{{application.communityName}}</view>
      <view class="status">申请中</view>
      <view class="cancel" bindtap="onCancel" id="{{application._id}}">取消</view>
    </view>
  </BlockBox>

  <!-- 管理员显示 申请中 -->
  <BlockBox wx:if="{{false}}" padding="20rpx">
    <view class="title">申请中</view>
     <view class="memberList" wx:for="{{3}}">
      <view class="memberItem">
        <iamge class="avatar" src="" />
        <view class="name">Cicada</view>
        <view class="btn reject" bindtap="onReject" id="{{itme._id}}">驳回</view>
        <view class="btn adopt" bindtap="onAdopt" id="{{itme._id}}">通过</view>
      </view>
    </view>
  </BlockBox>

  <!-- 管理员显示 成员 -->
  <BlockBox wx:if="{{false}}" padding="20rpx">
    <view class="title">成员</view>
    <view class="memberList" wx:for="{{3}}">
      <view class="memberItem">
        <iamge class="avatar" src="" />
        <view class="name">Cicada</view>
        <view class="btn kick" bindtap="onKick" id="{{itme._id}}">踢除</view>
      </view>
    </view>
  </BlockBox>
</view>
