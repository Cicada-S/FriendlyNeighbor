/* components/CommentBox/CommentBox.wxss */
.publishComment {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 30rpx 0;
  background-color: var(--Color-White);
}
.publishComment .input {
  flex: 1;
  height: 60rpx;
  padding: 0 30rpx;
  line-height: 60rpx;
  margin-bottom: 10rpx;
  color: var(--Color-FontD);
  border-radius: 30rpx;
  background: var(--Color-FontE);
}
.publishComment .hair {
  width: 120rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  color: var(--Color-White);
  padding: 0;
  margin-bottom: 10rpx;
  margin-left: 20rpx;
  border-radius: 20rpx;
  background-color: var(--Color-MainA);
}
.publishComment .hair::after {
  border: none;
}
