/* components/PostItem/PostItem.wxss */
.postItem {
  display: flex;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  background: #ffffff;
  box-shadow: 10px 10px 20px #d9d9d9, -10px -10px 20px #ffffff;
}
.postItem .picUrl {
  width: 90rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  background: #f5f5f5;
  box-shadow: 5px 5px 10px #e1e1e1, -5px -5px 10px #ffffff;
}
.postItem .picUrl .avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 10rpx;
}
.postItem .content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
  font-size: 28rpx;
}
.postItem .content .userName {
  color: var(--Color-MainB);
  font-size: 30rpx;
  font-weight: 550;
  margin-bottom: 18rpx;
}
.postItem .content .phonePrice {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.postItem .content .phonePrice .price {
  color: var(--Color-ViceA);
  font-size: 30rpx;
  padding-right: 20rpx;
}
.postItem .content .text {
  letter-spacing: 3rpx;
  margin-bottom: 20rpx;
}
.postItem .content .location {
  color: var(--Color-MainB);
  font-size: 26rpx;
  margin-bottom: 20rpx;
}
.postItem .content .departureTime {
  color: var(--Color-MainA);
  font-size: 26rpx;
  margin-bottom: 20rpx;
}
.postItem .content .departureTime .icon {
  letter-spacing: -8rpx;
  padding-right: 8rpx;
}
.postItem .content .footer {
  display: flex;
  align-items: center;
  color: var(--Color-FontA);
  font-size: 26rpx;
  font-weight: 300;
}
.postItem .content .footer .releaseTime {
  font-size: 26rpx;
}
.postItem .content .footer .partition {
  color: var(--Color-FontB);
  padding: 0 20rpx;
}
